<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/diff_game_guide_layout"
    tools:context="gotr.bgu.final_project.FindTheDifferenceGuidelinesActivity"
    android:tag="to_find_the_differences_game_bg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Find the differences - Instructions"
        android:gravity="center"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:tag="to_find_the_differences_game_title" />

    <TextView
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="In this game we will present you with two pictures. The images looks similar but actually have several hidden differences. In this game you will need to spot them. \n\nSwipe left and right to move between the pictures.When you are done swipe two times to the left to enter your answer."
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:tag="to_find_the_differences_game_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Find the differences game"
        android:id="@+id/toFindTheDifferenceBut"
        android:onClick="toFindTheDifferenceGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:tag="to_find_the_differences_game" />

</RelativeLayout>
